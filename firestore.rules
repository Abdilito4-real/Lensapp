rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // --- Public & Admin-Managed Collections ---
    
    // Challenges and Badges are public, but only managed by admins.
    match /{collection in ['challenges', 'badges']}/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // User profiles can be viewed by anyone and listed by signed-in users (for leaderboards).
    // Only the owner can edit their own profile.
    match /userProfiles/{userId} {
      allow get: if true;
      allow list: if isSignedIn();
      allow write: if isSignedIn() && isOwner(userId);
    }
    
    // --- User Content: Submissions ---

    // This collection group rule governs all 'submissions' documents.
    // - Signed-in users can query the collection (for voting, leaderboards).
    // - A specific submission can be read if it's 'approved' or if you are the owner.
    // - Users can only create, update, or delete their own submissions.
    match /{path=**}/submissions/{submissionId} {
      allow list: if isSignedIn();
      allow get: if resource.data.moderationStatus == 'approved' 
                 || (isSignedIn() && isOwner(resource.data.userId));
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isSignedIn() && isOwner(resource.data.userId);
      allow delete: if isSignedIn() && isOwner(resource.data.userId);
    }
    
    // --- Private User Data ---
    
    // This path is a container for private data, scoped by user ID.
    match /users/{userId} {
      // A user can read and write to their own votes subcollection.
      match /votes/{voteId} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }
      
      // A user can read their earned badges, but cannot write to them.
      match /badges/{userBadgeId} {
        allow read: if isSignedIn() && isOwner(userId);
        allow write: if false;
      }
    }

    // --- System Collections (Admin-only access) ---

    // This collection is used for existence-based admin role checks.
    // No client should be able to read or write here directly.
    match /roles_admin/{adminId} {
      allow read, write: if false;
    }
  }
}
